<div class="forms center-block" style="width: 60%;">
  <%= form_for([@suite, @case], :html => {:class => 'form-horizontal'}) do |f| %>
      <% if @case.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@case.errors.count, "error") %> prohibited this case from being saved:</h2>

            <ul>
              <% @case.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :ftitle, t('caseTitle'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :title, placeholder: t('caseTitle'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :fdescription, t('caseDescription'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :description, placeholder: t('caseDescription'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :fprecondition, 'Precondition', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :precondition, placeholder: 'Precondition', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :ftimeEstimated, 'Time estimated', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :timeEstimated, placeholder: 'Time estimated', class: 'form-control' %>
        </div>
      </div>

      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit t('save'), class: "btn btn-default btn-primary" %>
        <%= link_to t('back'), suite_cases_path(suite_id: @suite.id), class: "btn btn-default" %>
      </div>

  <% end %>
</div>