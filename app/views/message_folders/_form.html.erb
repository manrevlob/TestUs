<div class="forms center-block" style="width: 60%;">
  <%= form_for([@user, @message_folder], :html => {:class => 'form-horizontal'}) do |f| %>
      <% if @message_folder.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@message_folder.errors.count, "error") %> prohibited this case from being saved:</h2>

            <ul>
              <% @message_folder.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :ftitle, t('messageFolderName'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, placeholder: t('messageFolderName'), class: 'form-control' %>
        </div>
      </div>

      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit t('save'), class: "btn btn-default btn-primary" %>
        <%= link_to t('back'), message_folders_path, class: "btn btn-default" %>
      </div>

  <% end %>
</div>