<div class="forms center-block" style="width: 60%;">
  <%= form_for @role, :html => {:class => 'form-horizontal'} do |f| %>
      <% @role.errors.full_messages.each do |m| %>
          <div class="error">
            * <%= m %>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :fname, t('roleName'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, placeholder: t('roleName'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :fdescription, t('roleDescription'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :description, placeholder: t('roleDescription'), class: 'form-control' %>
        </div>
      </div>


      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit t('save'), class: "btn btn-default btn-primary" %>
        <%= link_to t('back'), roles_path, class: "btn btn-default" %>
      </div>

  <% end %>
</div>