<div class="forms center-block" style="width: 60%;">
  <%= form_for([@build, @plan], :html => {:class => 'form-horizontal'}) do |f| %>
      <% if @plan.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@case.errors.count, "error") %> prohibited this case from being saved:</h2>

            <ul>
              <% @plan.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :fname, t('planName'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, placeholder: t('planName'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :fdescription, t('planDescription'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :description, placeholder: t('planDescription'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :factive, t('planActive'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.check_box :active, placeholder: t('planActive'), class: 'check' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :fpublic, t('planPublic'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.check_box :public, placeholder: t('planPublic'), class: 'check' %>
        </div>
      </div>

      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit t('save'), class: "btn btn-default btn-primary" %>
        <%= link_to t('back'), build_plans_path(build_id: @build.id), class: "btn btn-default" %>
      </div>

  <% end %>
</div>