<h1>Keywords</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Description</th>
    </tr>
    </thead>

    <tbody>
    <% @keywords.each do |keyword| %>
        <tr>
          <td class="col-md-2"><%= keyword.name %></td>
          <td class="col-md-10"><%= keyword.description %></td>
          <td><%= link_to fa_icon("pencil"), edit_keyword_path(keyword) %></td>
          <td><%= link_to fa_icon("remove") , keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
