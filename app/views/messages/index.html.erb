<h1><%= @folder.name %>: Messages</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th>Subjet</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @messages.each do |message| %>
        <tr>
          <td><%= message.subjet %></td>
          <td><%= message.body %></td>
          <td><%= link_to 'Edit', edit_message_folder_message_path(id: message.id, folder_id: @folder.id) %></td>
          <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>