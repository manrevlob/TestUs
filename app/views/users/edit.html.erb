<h1><%= t('userEdit') %><%= @user.name %> </h1>

<div class="forms center-block" style="width: 60%;">
  <%= form_for @user, :html => {:class => 'form-horizontal'} do |f| %>
      <% @user.errors.full_messages.each do |m| %>
          <div class="be-blue white top-space">
            * <%= m %>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :fname, t('userName'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, placeholder: t('userName'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :fsurname, t('userSurname'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :surname, placeholder: t('userSurname'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :femail, t('userEmail'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :email, placeholder: t('userEmail'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('userActive'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.check_box :active, class: 'checkbox' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('userRole'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.collection_select :role_id, @roles, :id, :name, {}, {class: 'form-control'} %>
        </div>
      </div>

      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit t('save'), class: "btn btn-default btn-primary" %>
        <%= f.submit t('back'), class: "btn btn-default" %>
      </div>

  <% end %>
</div>