  <div class="form">

    <h1><%= t('createNew') %></h1>

    <%= form_for(@user) do |f| %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, placeholder: t('userName') %>
      </div>

      <div class="field">
        <%= f.text_field :surname, autofocus: true, placeholder: t('userSurname') %>
      </div>

      <div class="field">
        <%= f.text_field :email, autofocus: true, placeholder: t('userEmail') %>
      </div>

      <div class="field">
        <%= f.text_field :username, autofocus: true, placeholder: t('userUsername') %>
      </div>

      <div class="field">
        <%= f.check_box :active, class: "check" %>
        <%= f.label t('userActive') %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: t('userPassword') %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('userConfPassword') %>
      </div>

      <div class="field">
        <%= f.label t('userRole') %>
        <%= f.collection_select :role_id, @roles, :id, :name %>
      </div>

      <button>
        <%= t('createNew') %>
      </button>
    <% end %>

  </div>
</div>
