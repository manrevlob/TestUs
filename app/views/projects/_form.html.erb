<div class="forms center-block" style="width: 60%;">
  <%= form_for @project, :html => {:class => 'form-horizontal'} do |f| %>
      <% @project.errors.full_messages.each do |m| %>
          <div class="error">
            * <%= m %>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :fname, t('projectName'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, placeholder: t('projectName'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :fdescription, t('projectDescription'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :description, placeholder: t('projectDescription'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :factive, t('projectActive'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.check_box :active, placeholder: t('projectActive'), class: 'check' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :fpublic, t('projectPublic'), class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.check_box :public, placeholder: t('projectPublic'), class: 'check' %>
        </div>
      </div>

      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit t('save'), class: "btn btn-default btn-primary" %>
        <%= link_to t('back'), projects_path, class: "btn btn-default" %>
      </div>

  <% end %>
</div>